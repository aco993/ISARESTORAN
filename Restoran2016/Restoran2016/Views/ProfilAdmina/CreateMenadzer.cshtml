@model Restoran2016.Models.MENADZER

@{
    ViewBag.Title = "CreateMenadzer";
}

<h2>CreateMenadzer</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MENADZER</h4>
        <hr />
        @Html.ValidationSummary(false)

        @Html.HiddenFor(model => model.ID_RESTORANA)
        @Html.HiddenFor(model => model.RESTORAN.ID_RESTORANA)
        @Html.HiddenFor(model => model.RESTORAN.ADRESA_RESTORANA)
        @Html.HiddenFor(model => model.RESTORAN.OPIS_RESTPRANA)

        <div class="form-group">
            @Html.LabelFor(model => model.IDMENADZERA, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IDMENADZERA)
                @Html.ValidationMessageFor(model => model.IDMENADZERA)
                <div class="text-danger">
                    @ViewBag.Message
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ASD, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ASD)
                @Html.ValidationMessageFor(model => model.ASD)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RESTORAN.NAZIV_RESTORANA, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.RESTORAN.NAZIV_RESTORANA, new SelectList(ViewBag.restorani as System.Collections.IEnumerable), "Izaberi Restoran", new { @class = "control-label col-md-2", style = "width: 174px;" })
                @Html.ValidationMessageFor(model => model.RESTORAN.NAZIV_RESTORANA)
            </div>
        </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Vrati se nazad", null, null, null, new { href = Request.UrlReferrer })
</div>
