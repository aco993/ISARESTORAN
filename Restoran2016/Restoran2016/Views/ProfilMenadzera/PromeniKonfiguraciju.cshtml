@model Restoran2016.Models.RESTORAN

@{
    ViewBag.Title = "PromeniKonfiguraciju";
}

<h2>PromeniKonfiguraciju</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true)
    
    @Html.HiddenFor(model => model.ADRESA_RESTORANA)
     @Html.HiddenFor(model => model.ID_RESTORANA)
    @Html.HiddenFor(model => model.LATITUDA) 
    @Html.HiddenFor(model => model.LONGITUDA) 
    @Html.HiddenFor(model => model.MAIL_RESTORANA) 
    @Html.HiddenFor(model => model.NAZIV_RESTORANA) 
    @Html.HiddenFor(model => model.PROSECNA_OCENA)
     @Html.HiddenFor(model => model.TELEFON_RESTORANA) 
        @Html.HiddenFor(model => model.OPIS_RESTPRANA)

 
        <div class="form-group">
            @Html.LabelFor(model => model.BROJ_KOLONA, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BROJ_KOLONA)
                @Html.ValidationMessageFor(model => model.BROJ_KOLONA)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
   </div>
}

<div>
    @Html.ActionLink("Vrati se nazad", null, null, null, new { href = Request.UrlReferrer })
</div>
