    {
        @Html.AntiForgeryToken()


        <h4>JELOVNIK</h4>
        <hr />
        @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.ID_RESTORANA);

        <div class="form-group">
            @Html.LabelFor(model => model.ID_JELA, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_JELA)
                @Html.ValidationMessageFor(model => model.ID_JELA)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NAZIV_JELA, new { @class = "control-label col-md-2" })
