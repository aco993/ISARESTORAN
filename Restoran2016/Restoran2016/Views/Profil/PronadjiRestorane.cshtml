@model IEnumerable<Restoran2016.Models.RESTORAN>

@{
    ViewBag.Title = "PronadjiRestorane";
}

<h2>PronadjiRestorane</h2>

@using (Html.BeginForm())
{
    <p>
        Naziv: @Html.TextBox("naziv")
        Vrsta: @Html.TextBox("vrsta")
        <input type="submit" value="Filter" />
    </p>
}


<div>
    <h4>RESTORAN</h4>
	<hr />
   
    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("Naziv", "PronadjiRestorane", new { sortOrder = ViewBag.nazivSort })
            </th>

            <th>
                @Html.ActionLink("Opis", "PronadjiRestorane", new { sortOrder = ViewBag.vrstaSort })
            </th>
 

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @Html.DisplayFor(model => item.NAZIV_RESTORANA, new { sortOrder = ViewBag.nazivSort })
                </td>

                <td>
                    @Html.DisplayFor(model => item.OPIS_RESTPRANA, new { sortOrder = ViewBag.vrstaSort })
                </td>
                <td>
                    @Html.ActionLink("Informacije", "InformacijeORestoranu", new { @id = item.ID_RESTORANA })

                </td>
                <td>
                    @Html.ActionLink("Rezervisi", "RezervisiRestoran", new { @id = item.ID_RESTORANA })

                </td>


            </tr>
        }

    </table>


</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
